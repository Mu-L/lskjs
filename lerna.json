{
  "version": "2.4.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "beta"
      ],
      "exact": true,
      "conventionalCommits": true,
      "conventionalPrerelease": false,
      "message": "chore(release): %s"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/dist/**",
        "**/release/**",
        "**/*.md",
        "**/example/**",
        "**/test/**"
      ]
    }
  }
}
