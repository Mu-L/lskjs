{
  "version": "2.3.0-beta.9",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "beta"
      ],
      "conventionalCommits": true,
      "conventionalPrerelease": true,
      "prereleaseOnly": true,
      "message": "chore(release): %s",
      "npmClientArgs": ["--npm-tag next --prerelease-only"],
      "ignoreChanges": [
        "lerna.json"
      ]
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/dist/**",
        "**/release/**",
        "**/*.md",
        "**/example/**",
        "**/test/**"
      ]
    }
  }
}
