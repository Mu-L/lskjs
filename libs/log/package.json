{
  "name": "@lskjs/log",
  "version": "3.0.0-alpha.21",
  "description": "Yet another logger whitch combines the best features of debug, bunyan, logfmt/logrus, morgan/winston",
  "author": "Igor Suvorov <hi@isuvorov.com> (https://github.com/isuvorov)",
  "private": false,
  "scripts": {
    "build": "          lsk run build",
    "dev": "            lsk run dev",
    "prepack": "        lsk run prepack",
    "release": "        lsk run release",
    "test": "           lsk run test"
  },
  "dependencies": {
    "@lskjs/algos": "^3.0.0-alpha.21",
    "@lskjs/colors": "^3.0.0-alpha.20",
    "@lskjs/env": "^3.0.0-alpha.20",
    "@lskjs/err": "^3.0.0-alpha.21",
    "fast-safe-stringify": "2.1.1",
    "pretty-bytes": "5.6.0",
    "pretty-time": "1.1.0",
    "readline": "1.3.0",
    "split": "1.0.1",
    "through": "2.3.8"
  },
  "devDependencies": {
    "@types/pretty-time": "1.1.2",
    "@types/split": "1.0.2",
    "@types/through": "0.0.30",
    "logfmt": "1.3.2"
  },
  "optionalDependencies": {
    "logfmt": "1.3.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "lsklog": "./bin/cli.js"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./*": {
      "import": "./lib/*.mjs",
      "types": "./lib/*.d.ts",
      "default": "./lib/*.js"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENCE"
  ],
  "repository": "https://github.com/lskjs/lskjs/tree/master//libs/log",
  "bugs": "https://github.com/lskjs/lskjs/issues",
  "license": "MIT",
  "keywords": [
    "logger",
    "log",
    "debug",
    "bunyan",
    "morgan",
    "winston",
    "logfmt",
    "logrus"
  ],
  "contributors": [
    "Vladislav Denisov (https://github.com/NewSoftwareCulture)"
  ],
  "eslintConfig": {
    "extends": "@lskjs/eslint-config"
  },
  "jest": {
    "preset": "@lskjs/jest-config"
  },
  "clean-publish": {
    "packageManager": "pnpm"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "11kb"
    },
    {
      "path": "lib/index.mjs",
      "limit": "11kb"
    },
    {
      "path": "lib/pretty/prettyFormat.mjs",
      "limit": "10kb"
    },
    {
      "path": "lib/pretty/prettyRawLog.mjs",
      "limit": "11kb"
    },
    {
      "path": "lib/themeize.mjs",
      "limit": "3.1kb"
    }
  ]
}
