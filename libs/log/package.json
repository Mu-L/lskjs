{
  "name": "@lskjs/log",
  "version": "3.0.0-alpha.3",
  "description": "Yet another logger whitch combines the best features of debug, bunyan, logfmt/logrus, morgan/winston",
  "keywords": [   
     "logger",
    "log",
    "debug",
    "bunyan",
    "morgan",
    "winston",
    "logfmt",
    "logrus"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": "https://github.com/lskjs/lskjs/tree/master/libs/log",
  "license": "MIT",
  "author": "Igor Suvorov <hi@isuvorov.com> (https://github.com/isuvorov)",
  "contributors": [
    "Vladislav Denisov (https://github.com/NewSoftwareCulture)"
  ],
  "_type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts", "bin": {
    "lsklog": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "default": "./lib/index.js",
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "node": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./*": {
      "default": "./lib/*.js",
      "require": "./lib/*.js",
      "import": "./lib/*.mjs",
      "node": "./lib/*.js",
      "types": "./lib/*.d.ts"
    }
  },
  "scripts": {
    "dev": "            lsk run dev",
    "build": "          lsk run build",
    "test": "           lsk run test",
    "test:watch": "     lsk run test:watch",
    "release": "        lsk run release"
  },
  "eslintConfig": {
    "extends": "@lskjs/eslint-config"
  },
  "files": [
    "lib",
    "README.md",
    "LICENCE"
  ],
  "clean-publish": {
    "packageManager": "pnpm"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "1kb"
    }
  ],
  "dependencies": {
    "@lskjs/debug-level": "0.3.2",
    "@lskjs/env": "2.85.1",
    "@lskjs/err": "2.85.1",
    "fast-safe-stringify": "2.0.8",
    "pretty-bytes": "5.6.0",
    "pretty-time": "1.1.0",
    "readline": "1.3.0",
    "split": "1.0.1",
    "through": "2.3.8"
  },
  "devDependencies": {
    "@types/pretty-time": "1.1.1",
    "@types/split": "1.0.0",
    "@types/through": "0.0.30",
    "chalk": "4.1.2",
    "colors": "1.4.0",
    "kleur": "4.1.4",
    "logfmt": "1.3.2",
    "nanocolors": "0.2.9"
  },
  "optionalDependencies": {
    "logfmt": "1.3.2"
  }
}
