{
  "name": "@lskjs/module",
  "version": "3.0.0-alpha.21",
  "description": "Module system with dependency injection, event emitter, logger and submodules tree",
  "author": "Igor Suvorov <hi@isuvorov.com> (https://github.com/isuvorov)",
  "private": false,
  "scripts": {
    "build": "          lsk run build",
    "dev": "            lsk run dev",
    "prepack": "        lsk run prepack",
    "release": "        lsk run release",
    "test": "           lsk run test"
  },
  "dependencies": {
    "@lskjs/algos": "^3.0.0-alpha.21",
    "@lskjs/env": "^3.0.0-alpha.20",
    "@lskjs/err": "^3.0.0-alpha.21",
    "@lskjs/log": "^3.0.0-alpha.21",
    "@lskjs/mutex": "^3.0.0-alpha.20",
    "@lskjs/utils2": "^3.0.0-alpha.21",
    "events": "^3.3.0",
    "fishbird": "^0.19.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./*": {
      "import": "./lib/*.mjs",
      "types": "./lib/*.d.ts",
      "default": "./lib/*.js"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENCE"
  ],
  "repository": "https://github.com/lskjs/lskjs/tree/master/libs/module",
  "license": "MIT",
  "keywords": [
    "modules",
    "submodules",
    "dependency injection",
    "event emitter",
    "logger"
  ],
  "eslintConfig": {
    "extends": "@lskjs/eslint-config"
  },
  "jest": {
    "preset": "@lskjs/jest-config"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "21kb"
    },
    {
      "path": "lib/Module.js",
      "limit": "20kb"
    },
    {
      "path": "lib/ModuleWithConfig.js",
      "limit": "4.5kb"
    },
    {
      "path": "lib/ModuleWithEE.js",
      "limit": "12kb"
    },
    {
      "path": "lib/ModuleWithLifecycle.js",
      "limit": "4.5kb"
    },
    {
      "path": "lib/ModuleWithLog.js",
      "limit": "10kb"
    },
    {
      "path": "lib/ModuleWithSubmodules.js",
      "limit": "20kb"
    },
    {
      "path": "lib/items/index.js",
      "limit": "22kb"
    },
    {
      "path": "lib/asyncItems/index.js",
      "limit": "22kb"
    },
    {
      "path": "lib/asyncModules/index.js",
      "limit": "22kb"
    }
  ]
}
